sudo vi /etc/nginx/sites-available/ml-space

# content
server {
    listen 80;
    server_name ip_address;  # or Ec2 IP for now

    location / {
        proxy_pass http://127.0.0.1:8000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
    }
}

sudo ln -s /etc/nginx/sites-available/ml-space /etc/nginx/sites-enabled/
sudo nginx -t && sudo systemctl restart nginx

# to making domain setup
sudo apt install -y certbot python3-certbot-nginx
sudo certbot --nginx -d kalyanjyothula.fun -d www.kalyanjyothula.fun